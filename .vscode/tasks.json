{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "type": "cppbuild",
      "command": "/usr/bin/g++",
      "args": [
        "-fdiagnostics-color=always",
        "-g",
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}",
        "-lstdc++"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": ["$g++"],
      "group": "build",
      "detail": "compiler: /usr/bin/g++"
    }
  ]
}
